@switch (GameComponent)
{
    case Rectangle rectangle:
        <SvgRectangle Rectangle="@rectangle" />
        break;
    case Circle circle:
        <SvgCircle Circle="@circle" />
        break;
    case Line line:
        <SvgLine Line="@line" />
        break;
    case Text text:
        <SvgText Text="@text" />
        break;
    default:
        break;
}

@code {
    [Parameter]
    public GameComponent GameComponent { get; set; }
}